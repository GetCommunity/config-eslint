{
  "name": "@getcommunity/config-eslint",
  "description": "Eslint Config",
  "version": "0.0.15",
  "author": "@GetCommunity <ryan@getcommunity.com> (https://github.com/GetCommunity)",
  "contributors": [
    "Joey Grable <joey@getcommunity.com> (https://joeygrable.com)"
  ],
  "dependencies": {
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "devDependencies": {
    "@getcommunity/config-prettier": "^0.0.11",
    "@getcommunity/config-typescript": "^0.0.10",
    "@types/node": "^22.15.19",
    "eslint-plugin-tailwindcss": "^3.18.0",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0"
  },
  "exports": {
    "./library": {
      "types": "./dist/library.d.ts",
      "import": "./dist/library.js",
      "require": "./dist/library.cjs"
    },
    "./typescript": {
      "types": "./dist/typescript.d.ts",
      "import": "./dist/typescript.js",
      "require": "./dist/typescript.cjs"
    },
    "./tailwind": {
      "types": "./dist/tailwind.d.ts",
      "import": "./dist/tailwind.js",
      "require": "./dist/tailwind.cjs"
    },
    "./solid": {
      "types": "./dist/solid.d.ts",
      "import": "./dist/solid.js",
      "require": "./dist/solid.cjs"
    },
    "./solid-tanstack": {
      "types": "./dist/solid-tanstack.d.ts",
      "import": "./dist/solid-tanstack.js",
      "require": "./dist/solid-tanstack.cjs"
    }
  },
  "files": [
    "dist/"
  ],
  "keywords": [],
  "license": "ISC",
  "peerDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.26.0",
    "@types/node": "^22.15.19",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "eslint": "^9.15.3",
    "eslint-plugin-solid": "^0.14.5",
    "eslint-plugin-tailwindcss": "^3.18.0"
  },
  "prettier": "@getcommunity/config-prettier/prettier-config.json",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/getcommunity/config-eslint.git"
  },
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf node_modules",
    "format": "prettier --write \"./src/**/*.{js,ts}\"",
    "preview": "tsup --watch",
    "publish-manual": "npm publish"
  },
  "type": "module"
}
