{
  "name": "@getcommunity/config-eslint",
  "description": "",
  "version": "0.0.7",
  "author": "@GetCommunity <ryan@getcommunity.com> (https://github.com/GetCommunity)",
  "contributors": [
    "Joey Grable <joey@getcommunity.com> (https://joeygrable.com)"
  ],
  "dependencies": {
    "@getcommunity/config-prettier": "workspace:*",
    "@getcommunity/config-typescript": "workspace:*",
    "prettier": "^3.4.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "exports": {
    "./library": {
      "types": "./dist/library.d.ts",
      "import": "./dist/library.js",
      "require": "./dist/library.cjs"
    },
    "./solid": {
      "types": "./dist/solid.d.ts",
      "import": "./dist/solid.js",
      "require": "./dist/solid.cjs"
    },
    "./tailwind": {
      "types": "./dist/tailwind.d.ts",
      "import": "./dist/tailwind.js",
      "require": "./dist/tailwind.cjs"
    }
  },
  "files": [
    "dist/"
  ],
  "keywords": [],
  "license": "ISC",
  "peerDependencies": {
    "@eslint/js": "^9.26.0",
    "@eslint/eslintrc": "^3.3.1",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.15.19",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "eslint": "^9.15.3",
    "eslint-plugin-solid": "^0.14.5",
    "eslint-plugin-tailwindcss": "^3.18.0"
  },
  "prettier": "@getcommunity/config-prettier/package.js",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": "getcommunity/config-eslint.git",
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf node_modules",
    "format": "prettier --write \"./src/**/*.{js,ts}\"",
    "preview": "tsup --watch",
    "publish": "npm publish"
  },
  "type": "module"
}
